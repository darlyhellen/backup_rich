<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_hometitle_backgroud"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/black"
    android:padding="@dimen/activity_top_padding" >

    <!-- android:background="@drawable/top_bg_v21" -->

    <ImageButton
        android:id="@+id/id_ibt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/back_selector"
        android:padding="@dimen/button_padding"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_hometitle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textColor="@color/w_white"
        android:textSize="@dimen/textview_large" />

</RelativeLayout>