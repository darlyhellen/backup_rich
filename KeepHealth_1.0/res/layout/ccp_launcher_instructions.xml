<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ccp_translucent_half"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/developer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/experience"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/experience_instructions1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ccp_capacity_launcher_space"
            android:text="@string/str_developer_instructions"
            android:textAppearance="@style/mode_desc_text_appearance" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="@dimen/primary_margin_space"
            android:layout_marginBottom="@dimen/down_up_icon_space">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:src="@drawable/ccp_down" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/developer_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/mode_desc_space"
                android:drawableTop="@drawable/ccp_developer_mode_icon"
                android:gravity="center"
                android:text="@string/str_mode_developer"
                android:textAppearance="@style/mode_name_text_appearance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mode_sub_desc_space"
                android:text="@string/str_mode_developer_desc"
                android:textAppearance="@style/mode_desc_text_appearance" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/down_up_icon_space"
            android:layout_marginBottom="@dimen/primary_margin_space" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:src="@drawable/ccp_up" />
        </LinearLayout>

        <TextView
            android:id="@+id/experience_instructions2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/ccp_capacity_launcher_space"
            android:text="@string/str_experienc_instructions"
            android:textAppearance="@style/mode_desc_text_appearance" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/developer_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1.0"
            android:padding="@dimen/primary_margin_space"
            android:text="@string/str_developer_mode_desc"
            android:textAppearance="@style/mode_desc_text_appearance" />

        <TextView
            android:id="@+id/experience_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1.0"
            android:padding="@dimen/primary_margin_space"
            android:text="@string/str_experience_mode_desc"
            android:textAppearance="@style/mode_desc_text_appearance" />
    </LinearLayout>

</RelativeLayout>