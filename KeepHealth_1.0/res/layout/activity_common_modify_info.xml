<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_top_background"
        android:padding="@dimen/activity_top_padding" >

        <ImageButton
            android:id="@+id/id_ibt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            android:padding="@dimen/button_padding" />

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/w_white"
            android:textSize="@dimen/textview_large" />

        <Button
            android:clickable="false"
            android:id="@+id/id_bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_l_white"
            android:textColor="@color/w_l_white"
            android:text="保存"
            android:textSize="@dimen/textview_general" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/space_view"
        android:background="@color/bgwhite"
         >

        <ImageButton
            android:layout_marginRight="@dimen/activity_top_padding"
            android:id="@+id/id_ibt_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_close_yuan_selector"
            android:background="@null"
            android:padding="@dimen/button_padding" />

        <EditText
            android:padding="@dimen/button_padding"
            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:id="@+id/id_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/id_ibt_clear"
            android:background="@null"
            android:textSize="@dimen/textview_general" />
    </RelativeLayout>

</LinearLayout>