<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E3E3"
    android:fadingEdge="none"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/Title_category"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DefaultTabbarHeight"
            android:text="@string/str_group_profile_tips"
            android:textSize="@dimen/NormalTextSize"
            android:paddingLeft="@dimen/LargePadding" />

        <com.yuntongxun.kitsdk.ui.chatting.view.GroupProfileView
            android:id="@+id/group_file"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        
        <TextView
            style="@style/Title_category"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DefaultTabbarHeight"
            android:text="@string/str_group_notice_tips"
            android:textSize="@dimen/NormalTextSize"
            android:paddingLeft="@dimen/LargePadding" />

        <EditText
            android:id="@+id/group_notice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="#656565"
            android:padding="@dimen/SmallPadding"
            android:minLines="3"
            android:gravity="top"/>
        
        <Button
            android:id="@+id/apply_button"
            style="@style/CCPBigGreenButton"
            android:layout_marginRight="@dimen/NormalPadding"
            android:layout_marginLeft="@dimen/NormalPadding"
            android:layout_marginTop="@dimen/LargePadding"
            android:text="@string/login_login" />
        
        
        
        
        
    </LinearLayout>

</ScrollView>