<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >

    <com.ytdinfo.keephealth.ui.view.CommonActivityTopView
        android:id="@+id/id_commonActivityTopView "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ytdinfo.keephealth.ui.view.CommonActivityTopView>

    <com.ytdinfo.keephealth.ui.view.CommonModifyView
        android:id="@+id/id_modify_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_view"
        android:background="@color/bgwhite" >
    </com.ytdinfo.keephealth.ui.view.CommonModifyView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgwhite"
        android:padding="@dimen/activity_top_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新消息提醒设置"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_general" />

        <ImageButton
            android:id="@+id/id_ibt_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/on_switch" >
        </ImageButton>
    </RelativeLayout>

    <Button
        android:id="@+id/id_bt_cancelUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/bgwhite"
        android:padding="@dimen/activity_top_padding"
        android:text="退出登录"
        android:textColor="#aaff0000"
        android:textSize="@dimen/textview_large" />

</LinearLayout>