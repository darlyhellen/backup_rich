<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CCPScroll"
    android:scrollbars="none" >

    <LinearLayout
        style="@style/CCPBody" >

        <com.yuntongxun.kitsdk.ui.chatting.view.CCPClearEditText
            android:id="@+id/group_name"
            style="@style/CCPLineEditText"
            android:hint="@string/str_group_name_hint"
            android:singleLine="true" >
            <requestFocus />
        </com.yuntongxun.kitsdk.ui.chatting.view.CCPClearEditText>

        <com.yuntongxun.kitsdk.ui.chatting.view.CCPClearEditText
            android:id="@+id/group_notice"
            style="@style/CCPLineEditText"
            android:layout_marginTop="@dimen/NormalPadding"
            android:hint="@string/str_group_notice_hint"
            android:inputType="textMultiLine"
            android:maxLines="3" />
        
        <Spinner
            android:id="@+id/str_group_permission_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:layout_marginTop="@dimen/NormalPadding"
            android:visibility="gone"
            android:prompt="@string/str_group_permission_spinner" />

        <Button
            android:id="@+id/str_group_permission_spinner2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/NormalPadding"
            android:text="@string/str_group_permission_spinner"
            android:textSize="@dimen/TitleTextSize"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/create"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/NormalButtonHeight"
            android:layout_marginTop="@dimen/NormalPadding"
            style="@style/CCPBigGreenButton"
            android:text="@string/app_button_create" />
    </LinearLayout>

</ScrollView>