<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >

    <com.ytdinfo.keephealth.ui.view.CommonActivityTopView
        android:id="@+id/id_CommonActivityTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ytdinfo.keephealth.ui.view.CommonActivityTopView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bgwhite"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:singleLine="true"
            android:id="@+id/id_et_yanzhengma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请输入验证码"
            android:padding="@dimen/button_padding"
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:textSize="@dimen/textview_general" />

        <!-- <Button
            android:id="@+id/id_bt_timeDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/gray_fillet"
            android:padding="3dp"
            android:text="60s"
            android:textColor="@color/w_white"
            android:textSize="17sp" /> -->

        <Button
            android:id="@+id/id_bt_chongxinhuoqu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/cicle_green"
            android:padding="5dp"
            android:text="重新获取"
            android:textColor="@color/w_l_green"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <com.ytdinfo.keephealth.ui.view.CommonButton
        android:id="@+id/id_bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ytdinfo.keephealth.ui.view.CommonButton>

</LinearLayout>