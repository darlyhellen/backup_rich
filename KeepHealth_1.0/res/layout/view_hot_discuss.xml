<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_line"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id_hot_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_remenzixun"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/jiantou"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="热门资讯"
        android:textColor="@android:color/black" >
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

    <com.umeng.common.ui.widgets.NestedListView
        android:id="@+id/id_hot_news_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:descendantFocusability="blocksDescendants"
        android:listSelector="@color/divider"
        android:dividerHeight="0.5dp" />

</LinearLayout>