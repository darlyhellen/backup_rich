<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    tools:context=".IAintelligentguidance" >

    <RadioButton
        android:id="@+id/radiogroup22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:drawableTop="@drawable/healty__selector"
        android:gravity="center"
        android:padding="5dp"
        android:text="健康商城"
        android:textColor="@color/w_gray"
        android:textSize="@dimen/textview_radioButton"
        android:visibility="invisible" />

    <View
        android:id="@+id/vt_tablerow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignTop="@id/radiogroup22" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/vt_tablerow"
        android:background="@color/divider" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <RadioButton
            android:id="@+id/tab_rb_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home__selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_radioButton" />

        <RadioButton
            android:id="@+id/tab_rb_clinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/clinic__selector"
            android:gravity="center"
            android:text="门诊"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_radioButton" />

        <RadioButton
            android:id="@+id/tab_rb_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/healty__selector"
            android:gravity="center"
            android:text="健康商城"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_radioButton" />

        <com.umeng.common.ui.widgets.BadgeRadioButton
            android:id="@+id/tab_rb_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/news_selector"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_radioButton" />

        <RadioButton
            android:id="@+id/tab_rb_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/user_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_radioButton" />
    </RadioGroup>

</RelativeLayout>