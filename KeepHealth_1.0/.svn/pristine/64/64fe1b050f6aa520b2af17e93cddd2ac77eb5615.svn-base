<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/xh_lawyer_console_title"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:gravity="center"
        android:paddingLeft="15.0dip"
        android:background="@drawable/title_bar"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/lawyer_free"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="15.0dip"
                android:textColor="@color/default_text"
                android:textSize="16.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="5.0dip"
                android:textColor="@color/default_text"
                android:textSize="20.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="15.0dip"
                android:text="本机手机号："
                android:textColor="@color/default_text"
                android:textSize="16.0sp" />

            <EditText
                android:id="@+id/xh_input_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/xh_input_box"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="12"
                android:paddingLeft="5.0dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#ffcccdce"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip" >

            <Button
                android:id="@+id/xh_call_free"
                android:layout_width="wrap_content"
                android:layout_height="45.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/xh_layer_detail_hold_call_select"
                android:gravity="center"
                android:text="400电话拨打"
                android:textColor="@color/white"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/xh_call_normal"
                android:layout_width="wrap_content"
                android:layout_height="45.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/xh_button_free_call"
                android:gravity="center"
                android:paddingLeft="5.0dip"
                android:text="网络电话拨打"
                android:textColor="@color/white"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="bottom"
            android:paddingLeft="15.0dip"
            android:text="温馨提示："
            android:textColor="@color/default_text"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="15.0dip"
            android:paddingBottom="50.0dip"
            android:paddingLeft="15.0dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="\t\t网络电话拨打可不扣手机通话费,您的帐户余额为300元,可咨询75分钟,未避免通话中断"
                android:lineSpacingExtra="4.0dip"
                android:textColor="#ACACAC"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="请充值>>"
                android:textColor="#3E6DCF"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>