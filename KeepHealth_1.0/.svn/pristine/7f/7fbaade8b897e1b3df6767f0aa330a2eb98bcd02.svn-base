<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="10.0dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="70.0dip"
        android:layout_marginBottom="10.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/voice_chat_avatar_l"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_marginRight="8.0dip"
                android:src="@drawable/photo_default"
                android:focusable="false"
                android:visibility="visible" />

            <TextView
                android:id="@+id/name_l"
                android:layout_width="48.0dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="8203"
                android:textColor="#ADADAD"
                android:textStyle="bold"
                android:layout_marginTop="3.0dip"
                android:textSize="15.0sp" />
        </LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    
        <LinearLayout
            android:id="@+id/voice_chat_ly_l"
            android:layout_width="wrap_content"
            android:layout_height="48.0dip"
            android:background="@drawable/voice_inbox_normal_bubble"
            android:gravity="center_vertical"
            android:minHeight="49.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/voice_chat_recd_tv_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25.0dip"
                android:src="@drawable/voice_from_playing"/>

            <TextView
                android:id="@+id/voice_content_len_l"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="center_vertical"
                android:padding="3.0dip"
                android:shadowColor="#80ffffff"
                android:shadowDx="1.4"
                android:shadowDy="1.4"
                android:shadowRadius="1.0"
                android:text="60&apos;&apos;"
                android:textColor="#ff888888"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/im_voice_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="6.0dip"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingTop="6.0dip"
            android:paddingLeft="7.0dip"
            android:shadowColor="#a0ffffff"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.0"
            android:text="7-3 12:22"
            android:textColor="#ffa4a4a4"
            android:textSize="12.0dip"
            android:visibility="gone" />
		<include 
		    android:id="@+id/im_chat_ly"
		    layout="@layout/im_chat_receive_item"/>
		</LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1.0px"
            android:layout_weight="1.0" />
    </LinearLayout>

</LinearLayout>