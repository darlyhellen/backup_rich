<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conversation_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/voice_list_item_selector"
    android:gravity="center_vertical"
    android:minHeight="60.0dip"
    android:orientation="horizontal"
    android:paddingBottom="4.0dip"
    android:paddingLeft="4.0dip"
    android:paddingRight="4.0dip"
    android:paddingTop="4.0dip" >

    <RelativeLayout
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:gravity="center"
        android:layout_marginLeft="3.0dip" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sigle_icon"
            android:padding="3.0dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5.0dip"
        android:paddingRight="3.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="140.0dip"
                android:text="联系人"
                android:singleLine="true"
               	android:textColor="@color/voice_conv_textcolor" 
                android:textSize="19.0dip" />
			<TextView
                android:id="@+id/group_count_tv"
                android:textSize="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_marginLeft="2.0dip"
                android:gravity="left|center"
                android:textColor="@color/voice_conv_time_textcolor" />
            <TextView
                android:gravity="right"
                android:paddingRight="4.0dip"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
                android:textColor="@color/voice_conv_time_textcolor"
                android:background="@drawable/into_icon"
                android:textSize="14.0dip" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
