<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
         android:layout_marginBottom="16px"
        android:layout_marginRight="30px"
        android:text="@string/guide_declare"
        android:textColor="@color/guide_declare" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/has_been_checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/hascheck" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/next_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/nextcheck" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/has_not_checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/notcheck" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/checked_other_room" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/checked_other" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/do_not_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/do_not_check" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:visibility="gone" />

</TableRow>