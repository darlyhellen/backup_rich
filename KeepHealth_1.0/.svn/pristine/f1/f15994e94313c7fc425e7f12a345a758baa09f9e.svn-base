<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingRight="65.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
      
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_weight="1.0">

            <RelativeLayout
                android:id="@+id/im_chat_ly_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
	                android:id="@+id/im_chatting_file_icon_l"
	                android:layout_width="100dp"
	                android:layout_height="100dp"
	                android:layout_alignParentLeft="true"
	                android:layout_marginLeft="8.0dip"
	                android:layout_marginRight="8.0dip"
	                android:src="@drawable/talk_box_file_icon"
	                android:scaleType="centerCrop" 
	                android:layout_below="@+id/ic_doc_name"/>
<TextView 
    android:id="@+id/ic_doc_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="王强医生"
    android:textColor="#ff888888"
    android:textSize="14sp"
    android:visibility="gone"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:singleLine="true"
    />
            <com.voice.demo.group.baseui.CCPTextView
                android:layout_below="@id/ic_doc_name"
                android:id="@+id/file_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/im_chatting_file_icon_l"
                android:layout_centerVertical="true"
                android:singleLine="false"
                  android:background="@drawable/voice_inbox_recd_selector"
                android:text="未知"
                android:textColor="#ff000000"
                android:gravity="left|center"
                android:minHeight="49.0dip"
                android:lineSpacingExtra="2.0dip"
                android:textSize="16.0sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/im_chat_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="6.0dip"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingTop="6.0dip"
            android:paddingLeft="7.0dip"
            android:shadowColor="#a0ffffff"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.0"
            android:text="7-3 12:22"
            android:textColor="#ffa4a4a4"
            android:textSize="12.0dip" />
        <FrameLayout 
            android:id="@+id/fl_imageview"
            	android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:visibility="gone"
	    		 >

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="fill_parent"
            android:layout_height="100dp" />

	<Button 
	    android:id="@+id/btn_play"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:background="@drawable/btn_play"
	    />
	</FrameLayout>
        
    </LinearLayout>
</LinearLayout>