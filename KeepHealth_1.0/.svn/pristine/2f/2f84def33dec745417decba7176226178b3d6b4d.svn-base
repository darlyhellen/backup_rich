<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >

    <com.ytdinfo.keephealth.ui.view.CommonActivityTopView
        android:id="@+id/id_CommonActivityTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ytdinfo.keephealth.ui.view.CommonActivityTopView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bgwhite" >

        <Button
            android:id="@+id/id_ibt_yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_top_padding"
            android:background="@drawable/cicle_green"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/w_l_green"
            android:textSize="@dimen/textview_general" />

        <ImageButton
            android:id="@+id/id_ibt_clearPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/id_ibt_yanzhengma"
            android:background="@null"
            android:padding="@dimen/button_padding"
            android:src="@drawable/icon_close_yuan_selector" />

        <EditText
            android:id="@+id/id_et_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/id_ibt_clearPhone"
            android:background="@null"
            android:hint="手机号"
            android:padding="@dimen/button_padding"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:textSize="@dimen/textview_general" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bgwhite" >

        <ImageButton
            android:id="@+id/id_ibt_clearPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_top_padding"
            android:background="@null"
            android:padding="@dimen/button_padding"
            android:src="@drawable/icon_close_yuan_selector" />

        <EditText
            android:id="@+id/id_et_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/id_ibt_clearPass"
            android:background="@null"
            android:hint="手机验证码"
            android:padding="@dimen/button_padding"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:textSize="@dimen/textview_general" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <com.ytdinfo.keephealth.ui.view.CommonButton
        android:id="@+id/id_bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line" >
    </com.ytdinfo.keephealth.ui.view.CommonButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/button_padding"
            android:paddingTop="@dimen/button_padding"
            android:text="点击注册后代表您"
            android:textColor="@color/w_l_gray"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/button_padding"
            android:paddingTop="@dimen/button_padding" >

            <TextView
                android:id="@+id/id_tv_tongyixieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意《帮忙医用户注册协议》"
                android:textColor="@color/w_l_green"
                android:textSize="12sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@id/id_tv_tongyixieyi"
                android:layout_alignRight="@id/id_tv_tongyixieyi"
                android:layout_below="@id/id_tv_tongyixieyi"
                android:background="@color/w_l_green" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>