<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    android:orientation="vertical" >

    <com.ytdinfo.keephealth.ui.view.CommonActivityTopView
        android:id="@+id/id_CommonActivityTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ytdinfo.keephealth.ui.view.CommonActivityTopView>

    <RelativeLayout
        android:id="@+id/id_rl_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/activity_top_padding"
        android:paddingRight="@dimen/activity_top_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="称呼"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_general" />

        <EditText
            android:maxLength="5"
            android:layout_centerVertical="true"
            android:id="@+id/id_et_named"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:hint="请输入称呼"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:textSize="@dimen/textview_general"
            android:visibility="gone" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/id_ll_named"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <TextView
                android:id="@+id/id_tv_named"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="妈妈"
                android:textColor="@color/w_gray"
                android:textSize="@dimen/textview_general" />

            <ImageView
                android:id="@+id/id_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/arrow_gray_down" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/id_rl_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/activity_top_padding"
        android:paddingRight="@dimen/activity_top_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_general" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <ImageButton
                android:id="@+id/id_ibt_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boy_blue" />

            <ImageButton
                android:id="@+id/id_ibt_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/girl_gray" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/id_rl_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/activity_top_padding"
        android:paddingRight="@dimen/activity_top_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="年龄"
            android:textColor="@color/w_gray"
            android:textSize="@dimen/textview_general" />

        <EditText
            android:layout_centerVertical="true"
            android:id="@+id/id_et_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入年龄"
            android:padding="5dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:textSize="@dimen/textview_general" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

</LinearLayout>