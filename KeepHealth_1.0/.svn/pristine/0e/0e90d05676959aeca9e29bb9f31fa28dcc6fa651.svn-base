<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_v21_R1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/id_v21_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ask_doc" />

        <LinearLayout
            android:id="@+id/id_v21_liner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_v21_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问医生"
                    android:textColor="@color/v21_titles"
                    android:textSize="@dimen/textview_general" />

                <Button
                    android:id="@+id/id_v21_mark"
                    android:layout_width="50dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:textColor="@color/w_white"
                    android:textSize="@dimen/textview_shouye_tijianyuyue"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/id_v21_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击找医生快速解答"
                android:textColor="@color/lightgrey"
                android:textSize="@dimen/textview_shouye_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_v21_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ask_doc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_v21_R2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_v21_title_R2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问医生"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_general" />

            <Button
                android:id="@+id/id_v21_mark_R2"
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textColor="@color/w_white"
                android:textSize="@dimen/textview_shouye_tijianyuyue"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_v21_des_R2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="点击找医生快速解答"
                android:textColor="@color/w_l_gray"
                android:textSize="@dimen/textview_shouye_small" />

            <ImageView
                android:id="@+id/id_v21_image_R2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ask_doc" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>