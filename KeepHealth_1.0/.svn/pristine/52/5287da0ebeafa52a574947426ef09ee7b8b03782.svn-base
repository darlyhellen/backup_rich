<?xml version="1.0" encoding="utf-8"?>
<!-- 专职为有赞商城启动一个WebView -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_top_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/activity_top_padding" >

        <ImageButton
            android:id="@+id/id_webview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/id_webview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/w_white"
            android:textSize="@dimen/textview_large" />

        <ImageButton
            android:id="@+id/id_webview_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_shared"
            android:visibility="invisible" />
    </LinearLayout>

    <include layout="@layout/activity_web_view" />

</LinearLayout>