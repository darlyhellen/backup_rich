<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:background="@drawable/voice_list_item_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/xh_personal_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip" >

            <FrameLayout
                android:id="@+id/xh_personal_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/xh_edit_photo"
                    android:layout_width="72.0dip"
                    android:layout_height="72.0dip"
                    android:layout_gravity="center"
                    android:src="@drawable/photo_default" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:minHeight="80.0dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/xh_root"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3.0dip"
                    android:layout_marginTop="5.0dip" >

                    <TextView
                        android:id="@+id/xh_personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10.0dip"
                        android:paddingRight="8.0dip"
                        android:shadowDx="1.0"
                        android:shadowDy="1.0"
                        android:shadowRadius="1.0"
                        android:singleLine="true"
                        android:text="李小明"
                        android:textColor="@color/black"
                        android:textSize="20.0sp" />

                    <TextView
                        android:id="@+id/xh_layer_levl"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:layout_weight="1.0"
                        android:gravity="left"
                        android:shadowDx="1.0"
                        android:shadowDy="1.0"
                        android:shadowRadius="1.0"
                        android:textSize="13.0sp"
                        android:textColor="#61A0FF"
                        android:textAppearance="?android:textAppearanceMediumInverse" />
                </LinearLayout>
				<RatingBar 
				    android:id="@+id/xh_layer_rating"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    style="@style/roomRatingBar"
				    android:rating="4"
				    android:layout_marginTop="4.0dip"
				    android:layout_marginBottom="4.0dip"
				    android:isIndicator="true"
				    />
                <TextView
                    android:id="@+id/xh_layer_speciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10.0dip"
                    android:paddingRight="8.0dip"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:maxLines="2"
                    android:text="骨关节结核、骨髓炎、小儿麻痹症等疾病明显减少"
                    android:textColor="#474747"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/xh_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="25.0dip"
                android:duplicateParentState="true"
                android:src="@drawable/icon_group_card_detail_selector" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>