<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

   <include 
	    android:id="@+id/xh_head"
	    layout="@layout/ccp_head"/>

    <TextView
        android:id="@+id/error_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="暂无数据"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#ff0061a9"
        android:visibility="visible" />

    <ListView
        android:id="@+id/xh_layer_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/xh_head"
        android:divider="@drawable/listview_diviver_line"
        android:dividerHeight="2.0px"
        android:fadingEdgeLength="0.0dip"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:headerDividersEnabled="true"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:visibility="visible" />

</RelativeLayout>