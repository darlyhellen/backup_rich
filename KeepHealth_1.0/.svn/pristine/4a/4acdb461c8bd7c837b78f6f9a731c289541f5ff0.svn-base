<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >

    <com.ytdinfo.keephealth.ui.view.CommonActivityTopView
        android:id="@+id/id_CommonActivityTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ytdinfo.keephealth.ui.view.CommonActivityTopView>

    <RelativeLayout
        android:background="@color/bgwhite"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/id_ib_clearPass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_top_padding"
            android:src="@drawable/icon_close_yuan_selector"
            android:background="@null"
            android:padding="@dimen/button_padding" />

        <EditText
            android:maxLength="20"
            android:id="@+id/id_et_pass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/id_ib_clearPass1"
            android:background="@null"
            android:hint="请输入6-20位密码"
            android:padding="@dimen/button_padding"
            android:password="true"
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:textSize="@dimen/textview_general" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:background="@color/bgwhite"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageButton
            android:layout_marginRight="@dimen/activity_top_padding"
            android:id="@+id/id_ib_clearPass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_close_yuan_selector"
            android:background="@null"
            android:padding="@dimen/button_padding" />

        <EditText
            android:maxLength="20"
            android:padding="@dimen/button_padding"
            android:id="@+id/id_et_pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/id_ib_clearPass2"
            android:background="@null"
            android:hint="请确认密码"
            android:password="true"
            android:textColor="@color/black"
            android:textColorHint="@color/w_l_gray"
            android:textSize="@dimen/textview_general" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <com.ytdinfo.keephealth.ui.view.CommonButton
        android:id="@+id/id_bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line" >
    </com.ytdinfo.keephealth.ui.view.CommonButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>