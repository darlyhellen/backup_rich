<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_control_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/layout_call_dev"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/layout_call_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/NormalPadding"
        android:paddingTop="@dimen/NormalPadding">

        <LinearLayout
            android:id="@+id/incoming_call_bottom_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/layout_call_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hook_selector"
                android:layout_marginRight="@dimen/LargestPadding" />

            <ImageButton
                android:id="@+id/layout_call_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/answer_selector"
                android:layout_marginLeft="@dimen/LargestPadding" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calling_bottom_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/NormalPadding"
            android:paddingLeft="@dimen/NormalPadding"
            android:paddingRight="@dimen/NormalPadding"
            android:paddingTop="@dimen/NormalPadding"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/call_mute_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/layout_call_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mute_selector" />
                
				<ImageButton
	                android:id="@+id/layout_call_release"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/hook_selector"
	                android:layout_marginLeft="@dimen/LargestPadding"
	                android:layout_marginRight="@dimen/LargestPadding" />

                <ImageView
                    android:id="@+id/layout_call_handfree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/handfree_selector" />

                <ImageView
                    android:id="@+id/layout_call_transfer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
